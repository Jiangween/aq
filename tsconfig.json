{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "paths": {
        "@components/*": ["components/*"],
        "@services/*": ["services/*"],
        "@styles/*": ["styles/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  